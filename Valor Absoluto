// Area Triangulo.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include<iostream>
#include"conio.h"
using namespace std;
void main(){
	int a,x;
	cout<<"Ingrese un numero: ";
	cin>>a;
	if (a<0)
		x=-a;
	else (a>=0)
		x=a;
		cout<<"El valor absoluto de su numero es: "<<x;
		getch();
}





